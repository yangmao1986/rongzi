<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/DIMEN_255PX"
    android:orientation="vertical"
    android:background="#ffffff"
    android:paddingLeft="@dimen/DIMEN_20PX"
    android:paddingRight="@dimen/DIMEN_20PX"
     >    

    <TextView 
    android:id="@+id/recentdeal_accountRecordDate_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:textSize="@dimen/DIMEN_36PX"
        android:textColor="#303030"
        android:text="123"
        android:paddingTop="@dimen/DIMEN_35PX"
       
        />

    <TextView 
        android:id="@+id/recentdeal_accountRecordMoney_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
      android:textColor="#3e8340"
      android:textSize="@dimen/DIMEN_28PX"
      
        />
  
     
     <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="@dimen/DIMEN_40PX"
    android:orientation="horizontal"
    
     >
    <TextView 
        android:id="@+id/recentdeal_factorage_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
      android:textColor="#888888"
      android:textSize="@dimen/DIMEN_24PX"
      
        />   
    <TextView 
   android:id="@+id/recentdeal_huanChongFactorage_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
      android:textColor="#ea5e61"
      android:textSize="@dimen/DIMEN_24PX"
      android:paddingLeft="@dimen/DIMEN_35PX"
        />
      
     </LinearLayout>
  

 
</LinearLayout>