<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f6f6f6"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:background="#FF8500"
>

            <ImageButton
                android:id="@+id/pay_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"              
                android:background="@drawable/back_button_selector"
                android:onClick="ture"
                android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                />


            <TextView
                android:id="@+id/tv_logo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值"
                android:textColor="#ffffff"
                android:textSize="@dimen/DIMEN_36PX"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                 />
       

   
    </RelativeLayout>
    
    
   
   
      
    
   <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="@dimen/DIMEN_250PX"
       android:background="#30c368"
       android:orientation="vertical"
       android:padding="@dimen/DIMEN_20PX"
       android:layout_marginTop="@dimen/DIMEN_30PX"
       >
       
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="可用余额"
           android:textSize="@dimen/DIMEN_32PX"
           android:textColor="#ffffff"
           android:layout_marginLeft="@dimen/DIMEN_40PX"
           
           />
       
   
       
       
           <TextView 
               android:id="@+id/queryBalance_textview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="￥0"
           android:textSize="@dimen/DIMEN_58PX"
           android:textColor="#ffffff"
           android:layout_marginLeft="@dimen/DIMEN_40PX"
           android:layout_marginTop="@dimen/DIMEN_90PX"
           
           
           />
       
       
   </LinearLayout>
   
   
   
   <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="@dimen/DIMEN_100PX"
       android:orientation="vertical"
       android:background="@drawable/background_penson"
       android:layout_marginTop="@dimen/DIMEN_30PX"

       >
       
       
       <RelativeLayout 
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:padding="@dimen/DIMEN_20PX"
           >
           
           <EditText
               android:id="@+id/recharge_money" 
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:hint="请输入充值金额"
               android:textSize="@dimen/DIMEN_30PX"
               android:textColor="#BEBEBE"
               android:background="#ffffff"
               android:layout_alignParentLeft="true"
               android:layout_centerVertical="true"
               />
           
       
         
           
       </RelativeLayout>
       
   
          
          
          </LinearLayout>
   
   
   
    <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_margin="@dimen/DIMEN_20PX"
           
           >
           
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="单笔最高充值金额为5万元(输入格式:0.00)"
               android:textColor="#888888"
               android:textSize="@dimen/DIMEN_32PX"
                            
               />
           
   
                  <Button 
              android:id="@+id/goto_pay_button"
       android:layout_width="@dimen/DIMEN_680PX"
       android:layout_height="@dimen/DIMEN_90PX"
       android:text="确认充值"
       android:textSize="@dimen/DIMEN_32PX"
       android:textColor="#ffffff"
       android:layout_marginTop="@dimen/DIMEN_38PX"
       android:background="@drawable/pay_button_selector"
       android:layout_gravity="center"
       
       />

                  </LinearLayout>
</LinearLayout>
