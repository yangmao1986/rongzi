<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_40PX" >

        <com.rongdai.view.CircleHeadView
            android:id="@+id/evaluation_imagehead"
            android:layout_width="@dimen/DIMEN_55PX"
            android:layout_height="@dimen/DIMEN_55PX"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/headimage" />

        <TextView
            android:id="@+id/evaluation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_toRightOf="@id/evaluation_imagehead"
            android:textColor="#55a4e8"
            android:textSize="@dimen/DIMEN_28PX" />

        <TextView
            android:id="@+id/evaluation_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:textColor="#888888"
            android:textSize="@dimen/DIMEN_28PX" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/DIMEN_10PX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:id="@+id/evaluation_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="#000000"
            android:textSize="@dimen/DIMEN_32PX" />

        
        <Button
            android:background="#F7F7F7"
            android:textSize="@dimen/DIMEN_20PX"
            android:textColor="#54B8ee"
            android:button="@null"
            android:id="@+id/evaluation_say"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/DIMEN_20PX"
            android:drawableLeft="@drawable/evaluation_say"
            android:text="回复" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_evaluations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/DIMEN_20PX"
        android:background="#EDEDED" >
    </ListView>

</LinearLayout>