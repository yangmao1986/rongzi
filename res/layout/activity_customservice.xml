<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_100PX"
            android:background="#FF8500"
            android:button="@null"
            android:text="客服选择"
            android:textColor="#ffffff"
            android:textSize="@dimen/DIMEN_36PX" />

        <ImageView
            android:id="@+id/customservice_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:src="@drawable/login_back_bg" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_loanservice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_136PX"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/loanservice"
            android:layout_width="@dimen/DIMEN_90PX"
            android:layout_height="@dimen/DIMEN_90PX"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:src="@drawable/loanservice" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_toRightOf="@+id/loanservice"
            android:text="贷款客服"
            android:textColor="#303030"
            android:textSize="@dimen/DIMEN_32PX" />

        <ImageView
            android:layout_width="@dimen/DIMEN_15PX"
            android:layout_height="@dimen/DIMEN_27PX"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:src="@drawable/arraw_small" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/rl_financingservice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_136PX"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/financingservice"
            android:layout_width="@dimen/DIMEN_90PX"
            android:layout_height="@dimen/DIMEN_90PX"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:src="@drawable/financingservice" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_toRightOf="@+id/financingservice"
            android:text="理财客服"
            android:textColor="#303030"
            android:textSize="@dimen/DIMEN_32PX" />

        <ImageView
            android:layout_width="@dimen/DIMEN_15PX"
            android:layout_height="@dimen/DIMEN_27PX"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:src="@drawable/arraw_small" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc" />

</LinearLayout>