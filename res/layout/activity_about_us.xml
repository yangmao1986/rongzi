<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" 
    android:background="#ffffff"
    >

   
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:background="#FF8500"
>

            <ImageButton
                android:id="@+id/about_us_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"              
                android:background="@drawable/back_button_selector"
                android:onClick="ture"
                android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_10PX"
                />


      

            <TextView
                android:id="@+id/tv_logo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"
                android:textColor="#ffffff"
                android:textSize="@dimen/DIMEN_38PX"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                 />
       

   
    </RelativeLayout>
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
        <ImageView 
            android:layout_width="@dimen/DIMEN_334PX"
            android:layout_height="@dimen/DIMEN_129PX"
            android:src="@drawable/guanyuwomenlogo"
            android:layout_gravity="center"
            />
        
        
        <TextView 
            android:id="@+id/aboutus_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/DIMEN_20PX"
            android:textColor="#303030"
            android:textSize="@dimen/DIMEN_30PX"
            
            
            />
        
        
        
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        
        >
         <TextView 
                  android:id="@+id/copyright_textview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="河北安凯投资有限公司  版权所有"
           android:textColor="#888888"
           android:textSize="@dimen/DIMEN_24PX"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           
           />
         
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Copyright ©2014-2015"
           android:textColor="#888888"
           android:textSize="@dimen/DIMEN_24PX"
           android:layout_above="@id/copyright_textview"
           android:layout_centerHorizontal="true"
           
           /> 
           
             

    </RelativeLayout>
    
    
</LinearLayout>
