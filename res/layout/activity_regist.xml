<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_100PX"
            android:background="#FF8500"
            android:button="@null"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="@dimen/DIMEN_40PX" />

        <ImageView
            android:id="@+id/regist_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:layout_marginTop="@dimen/DIMEN_5PX"
            android:src="@drawable/login_back_bg" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <com.rongdai.view.CircleHeadView
            android:id="@+id/regist_headimage"
            android:layout_width="@dimen/DIMEN_138PX"
            android:layout_height="@dimen/DIMEN_138PX"
            android:layout_marginTop="@dimen/DIMEN_20PX"
            android:src="@drawable/headimage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请上传头像"
            android:textColor="#bebebe"
            android:textSize="@dimen/DIMEN_30PX" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/split_line" />

    <EditText
        android:id="@+id/regist_username"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:button="@null"
        android:hint="请输入用户名"
        android:paddingLeft="@dimen/DIMEN_20PX" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/split_line" />

    <EditText
        android:id="@+id/regist_psw"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:button="@null"
        android:hint="设置密码"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/DIMEN_20PX" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/split_line" />

    <EditText
        android:id="@+id/regist_repsw"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:button="@null"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/DIMEN_20PX" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/split_line" />

    <EditText
        android:id="@+id/regist_phone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:button="@null"
        android:hint="请输入您的手机号"
        android:inputType="phone"
        android:paddingLeft="@dimen/DIMEN_20PX" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/regist_verification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#ffffff"
            android:button="@null"
            android:hint="请输入验证码"
            android:paddingLeft="@dimen/DIMEN_20PX" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            android:layout_marginBottom="@dimen/DIMEN_10PX"
            android:layout_weight="1"
            android:background="@drawable/get_verification_bg" >

            <Button
                android:layout_centerInParent="true"
                android:id="@+id/regist_getverification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/get_verification_bg"
                android:button="@null"
                android:text="获取验证码" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:gravity="center_vertical"
            android:text="点击注册即同意"
            android:textColor="#888888"
            android:textSize="@dimen/DIMEN_27PX" />

        <TextView
            android:id="@+id/regist_agreement"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:gravity="center_vertical"
            android:text="《融投贷注册协议》"
            android:textColor="#2891d4"
            android:textSize="@dimen/DIMEN_27PX" />
    </LinearLayout>

    <Button
        android:id="@+id/regist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/DIMEN_20PX"
        android:layout_marginRight="@dimen/DIMEN_20PX"
        android:layout_weight="1"
        android:background="@drawable/regist_bg"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="@dimen/DIMEN_36PX" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

</LinearLayout>