<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_100PX"
            android:background="#FF8500"
            android:button="@null"
            android:text="输入验证码"
            android:textColor="#ffffff"
            android:textSize="@dimen/DIMEN_40PX" />

        <ImageView
            android:id="@+id/verification_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:layout_marginTop="@dimen/DIMEN_5PX"
            android:src="@drawable/login_back_bg" />
    </RelativeLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
    <EditText
        android:id="@+id/verification"
       android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#ffffff"
            android:button="@null"
            android:hint="请输入验证码"
            android:paddingLeft="@dimen/DIMEN_20PX" />
     <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            android:layout_marginBottom="@dimen/DIMEN_10PX"
            android:layout_weight="1"
            android:background="@drawable/get_verification_bg" >

            <Button
                android:layout_centerInParent="true"
                android:id="@+id/regist_getverification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/get_verification_bg"
                android:button="@null"
                android:text="获取验证码" />
        </RelativeLayout>
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/DIMEN_20PX"
        android:layout_marginRight="@dimen/DIMEN_20PX"
        android:layout_weight="1"
        android:text="请输入我们发给您的验证码，60秒内没有收到请返回上一步从新操作"
        android:textColor="#888888"
        android:textSize="@dimen/DIMEN_30PX" />

    <Button
        android:id="@+id/verificartion_sure"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/DIMEN_20PX"
        android:layout_marginRight="@dimen/DIMEN_20PX"
        android:layout_weight="1"
        android:background="@drawable/login_bg"
        android:button="@null"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="@dimen/DIMEN_40PX" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" />

</LinearLayout>