<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:background="#FF8500"
>

            <ImageButton
                android:id="@+id/SetPhoto_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"              
                android:background="@drawable/back_button_selector"
                android:onClick="ture"
                android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                />


            <TextView
                android:id="@+id/tv_logo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置头像"
                android:textColor="#ffffff"
                android:textSize="@dimen/DIMEN_36PX"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                 />
       

   
    </RelativeLayout>
    
    
   
   
      
   <RelativeLayout 
       android:layout_width="fill_parent"
       android:layout_height="@dimen/DIMEN_380PX"

       >
            
       <ImageView 
           android:layout_width="@dimen/DIMEN_226PX"
           android:layout_height="@dimen/DIMEN_226PX"
           android:src="@drawable/nornal_photo"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           />
       
       
      
   </RelativeLayout>
   
   
   
 <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@drawable/background_penson"
       android:layout_marginTop="@dimen/DIMEN_30PX"

       >
       
       
       <RelativeLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:padding="@dimen/DIMEN_20PX"
           >
           
               <ImageView 
                android:id="@+id/photo_ico"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/photo_ico"
               android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
               />
           
           <TextView 
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text="从相册选择一张"
               android:textSize="@dimen/DIMEN_30PX"
               android:textColor="#303030"
               android:background="#ffffff"
               android:layout_marginLeft="@dimen/DIMEN_20PX"
               android:layout_toRightOf="@id/photo_ico"
               android:layout_centerVertical="true"
               />
           
                     <ImageView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/arrow"
               android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
               />
           
       
         
           
       </RelativeLayout>
       
          <View 
       android:layout_width="fill_parent"
       android:layout_height="1dp"
       android:background="@drawable/line_vertical"

       />
          
              <RelativeLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:padding="@dimen/DIMEN_20PX"
           >
                     
                              <ImageView 
                android:id="@+id/camera_ico"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/camera_ico"
               android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
               />   
                  
           
     <TextView 
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text="拍一张照片"
               android:textSize="@dimen/DIMEN_30PX"
               android:textColor="#303030"
               android:background="#ffffff"
                              android:layout_marginLeft="@dimen/DIMEN_20PX"
               android:layout_toRightOf="@id/camera_ico"

                              android:layout_centerVertical="true"
               />
           
       
                    <ImageView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/arrow"
               android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
               />
           
       </RelativeLayout>
          
          
          </LinearLayout>
   
   

</LinearLayout>
