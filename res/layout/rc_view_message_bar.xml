<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:background="#F8F8F8"
    android:gravity="center_vertical"
    android:minHeight="@dimen/DIMEN_98PX"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/conversation_message_bar_change_iv"
        android:layout_width="@dimen/DIMEN_64PX"
        android:layout_height="@dimen/DIMEN_64PX"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/DIMEN_15PX"
        android:layout_marginLeft="@dimen/DIMEN_24PX"
        android:layout_marginRight="@dimen/DIMEN_10PX"
        android:contentDescription="@string/content_description"
        android:src="@drawable/rc_message_bar_vioce_icon" />

    <LinearLayout
        android:id="@+id/conversation_message_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/DIMEN_5PX"
        android:layout_marginRight="@dimen/DIMEN_15PX"
        android:layout_weight="1"
        android:background="@drawable/rc_edit_bg"
        android:gravity="center_horizontal|bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIMEN_5PX"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:gravity="center_horizontal|bottom"
            android:minHeight="@dimen/DIMEN_96PX">

            <io.rong.imkit.view.MentionsEditText
                android:id="@+id/conversation_message_bar_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#F8F8F8"
                android:gravity="bottom"
                android:maxLines="4"
                android:paddingBottom="@dimen/DIMEN_10PX"
                android:paddingLeft="@dimen/DIMEN_5PX"
                android:paddingTop="@dimen/DIMEN_10PX"
                android:textColor="@android:color/black"
                android:textSize="@dimen/DIMEN_35PX" />
        </LinearLayout>

        <ImageView
            android:id="@+id/conversation_message_expression"
            android:layout_width="@dimen/DIMEN_50PX"
            android:layout_height="@dimen/DIMEN_50PX"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/DIMEN_10PX"
            android:layout_marginRight="@dimen/DIMEN_6PX"
            android:background="@drawable/rc_smiley_selector" />
    </LinearLayout>

    <Button
        android:id="@+id/conversation_message_bar_voice_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/DIMEN_15PX"
        android:layout_marginTop="@dimen/DIMEN_18PX"
        android:background="@drawable/rc_voice_selector"
        android:padding="@dimen/DIMEN_20PX"
        android:text="@string/view_message_bar_voice_speak"
        android:textColor="@color/rc_message_bar_control_color"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/conversation_message_bar_add_iv"
        android:layout_width="@dimen/DIMEN_64PX"
        android:layout_height="@dimen/DIMEN_64PX"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/DIMEN_15PX"
        android:layout_marginRight="@dimen/DIMEN_25PX"
        android:layout_marginLeft="@dimen/DIMEN_10PX"
        android:background="@drawable/rc_message_bar_add"
        android:visibility="visible" />

    <Button
        android:id="@+id/conversation_message_bar_send_btn"
        android:layout_width="@dimen/DIMEN_86PX"
        android:layout_height="@dimen/DIMEN_68PX"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/DIMEN_6PX"
        android:layout_marginLeft="@dimen/DIMEN_10PX"
        android:layout_marginRight="@dimen/DIMEN_3PX"
        android:background="@drawable/rc_send_selector"
        android:text="@string/view_message_bar_send"
        android:textColor="@android:color/white"
        android:visibility="gone" />

</LinearLayout>