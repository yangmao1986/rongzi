<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rc_dialog"
    android:layout_width="@dimen/DIMEN_564PX"
    android:layout_height="wrap_content"
    android:background="@drawable/rc_bg_select_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@android:id/title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_64PX"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/DIMEN_18PX"
        android:gravity="center_vertical"
        android:textColor="#3498DB"
        android:textSize="@dimen/DIMEN_30PX" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="@color/dialog_conversation_line_color" />

    <EditText
        android:id="@android:id/edit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_90PX"
        android:layout_marginLeft="@dimen/DIMEN_10PX"
        android:layout_marginRight="@dimen/DIMEN_10PX"
        android:background="@drawable/rc_dialog_edit_bg"
        android:gravity="bottom"
        android:textColor="#d3d3d3"
        android:textSize="@dimen/DIMEN_28PX" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_82PX"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@android:id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#d3d3d3"
            android:gravity="center_horizontal|center_vertical"
            android:background="@android:color/transparent"
            android:textSize="@dimen/DIMEN_28PX" />

        <Button
            android:id="@android:id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d3d3d3"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:background="@android:color/transparent"
            android:textSize="@dimen/DIMEN_28PX" />

    </LinearLayout>

</LinearLayout>