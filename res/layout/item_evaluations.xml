<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/DIMEN_30PX"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/evaluate_from"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#55a4e8"
            android:textSize="@dimen/DIMEN_28PX" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:text="回复"
            android:textColor="#5C5C5C"
            android:textSize="@dimen/DIMEN_28PX" />

        <TextView
            android:id="@+id/evaluate_to"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:textColor="#55a4e8"
            android:textSize="@dimen/DIMEN_28PX" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_30PX" >

        <TextView
            android:id="@+id/evaluations_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:lineSpacingExtra="@dimen/DIMEN_10PX"
            android:textColor="#303030"
            android:textSize="@dimen/DIMEN_32PX" />

         <Button
            android:background="#EDEDED"
            android:textSize="@dimen/DIMEN_20PX"
            android:textColor="#54B8ee"
            android:button="@null"
            android:id="@+id/evaluations_say"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/DIMEN_20PX"
            android:drawableLeft="@drawable/evaluation_say"
            android:text="回复" />
    </RelativeLayout>

</LinearLayout>