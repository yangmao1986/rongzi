<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:background="#FF8500"
>


      
            <ImageButton
                android:id="@+id/feedback_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"              
                android:background="@drawable/back_button_selector"
                android:onClick="ture"
                android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />


      

            <TextView
                android:id="@+id/tv_logo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:textColor="#ffffff"
                android:textSize="@dimen/DIMEN_38PX"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                 />
       

   
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >
        <EditText 
            android:id="@+id/contents_edittext"
            android:layout_width="@dimen/DIMEN_680PX"
            android:layout_height="@dimen/DIMEN_378PX"
            android:hint="请输入您的意见和建议"
            android:background="@drawable/edittext_background"
               android:inputType="textMultiLine"
   android:gravity="left|top"
   android:minLines="6"
   android:padding="10dp"
            />
        
               <EditText 
                   android:id="@+id/contactType_edittext"
            android:layout_width="@dimen/DIMEN_680PX"
            android:layout_height="@dimen/DIMEN_80PX"
            android:hint="请输入您的电话或邮箱"
            android:background="@drawable/edittext_background"

   android:padding="10dp"
   android:layout_marginTop="20dp"
            />
        
                <Button 
                    android:id="@+id/post_Feedback_button"
       android:layout_width="@dimen/DIMEN_680PX"
       android:layout_height="@dimen/DIMEN_90PX"
       android:text="提交"
       android:textColor="#ffffff"
       android:background="@drawable/feedback_button_selector"
       android:layout_gravity="center"
          android:layout_marginTop="20dp"
       />
        
    </LinearLayout>
    

</LinearLayout>
